<UserControl x:Class="CryptocurrencuiesApp.View.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptocurrencuiesApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="Cryptocurrencies" HorizontalAlignment="Center"/>
        <Label Content="Cryptocurrencies ranking by trading volume"  HorizontalAlignment="Center" FontSize="14"/>
        <local:CurrenciesList x:Name="currenciesList" Currencies="{Binding Currencies}"/>
    </StackPanel>
</UserControl>
